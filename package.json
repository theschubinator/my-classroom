{
  "name": "my-classroom",
  "jest": {
    "resetMocks": true,
    "collectCoverageFrom": [
      "**/src/**/*.{js}",
      "!**/src/*.{js}"
    ]
  },
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/theschubinator/my-classroom.git"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.8",
    "chance": "^1.0.18",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest-dom": "^3.1.2",
    "my-classroom-api": "^2.0.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "react-testing-library": "^5.9.0",
    "redux-mock-store": "^1.5.3",
    "semantic-release": "^15.13.3",
    "tcomb": "^3.2.29"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "node-sass": "^4.11.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-icons": "^3.4.0",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.5",
    "react-spinners": "^0.5.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "npm run api & react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --colors",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --coverage --colors",
    "semantic-release": "semantic-release",
    "api": "node -e \"require('my-classroom-api').mockServer()\""
  }
}
